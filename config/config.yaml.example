# Trakt-to-Letterboxd Sync Configuration

# Trakt API Configuration
trakt:
  client_id: "YOUR_TRAKT_CLIENT_ID"
  client_secret: "YOUR_TRAKT_CLIENT_SECRET"
  # Access token will be generated during OAuth flow
  access_token: ""
  refresh_token: ""

# Letterboxd Configuration
letterboxd:
  # Set to true to enable automated CSV upload (requires Selenium)
  auto_upload: false
  username: "YOUR_LETTERBOXD_USERNAME"
  password: "YOUR_LETTERBOXD_PASSWORD"

# Sync Settings
sync:
  # Schedule format: cron expression (e.g., "0 */6 * * *" for every 6 hours)
  schedule: "0 2 * * *"  # Daily at 2 AM
  # Only sync movies watched after this date (YYYY-MM-DD)
  # Leave empty to sync all history on first run
  start_date: ""
  # Path to store CSV exports
  export_path: "/app/data/exports"
  # Keep track of last sync to enable incremental syncing
  last_sync_file: "/app/data/last_sync.txt"

# Web UI Settings
web:
  host: "0.0.0.0"
  port: 5000
  # Set a password to protect the web interface
  admin_password: "changeme"

# Logging
logging:
  level: "INFO"  # DEBUG, INFO, WARNING, ERROR
  file: "/app/logs/sync.log"
  max_bytes: 10485760  # 10MB
  backup_count: 5
